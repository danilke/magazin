	<%= paginate @products %>
	<ul id="product_list" class="bordercolor grid">
			<% @products.each do |product|%>
				
		           <li >
				<%= link_to  image_tag(product.featured_image(:small)), product_path(product.id), :class=>"product_image" %>
			<p>	<%= link_to product.name, product_path(product), :class => "product_link"%></p>
			<p> </p>
			 <p>  <%= link_to (product.description_markup.truncate(50)),  product_path(product.id), :class=>"product_descr" , :title=>"More"%></p>
			  <p><span class = "price", color: '#888'><%= number_to_currency product.price_range.first %></span></p>
					<h3><%= button_to "View", product_path(product), :class => 'button' %></h3>
					
			</li>
				
				<%end%>
				 </ul>
			 <span class="tide"></span>
		
		<div class="small-line"></div>
							<!-- PAGINATION: begin -->
					<div class="pagination">
					
						<ul class="pages">
							<%= paginate @products %>
						</ul>
						
						<span class="tide"></span>
					</div>
					<!-- PAGINATION: end -->




								